{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "%PROGRAMDATA%/FlarmTerminal/Logs/FlarmTerminal.log",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 5242880
        }
      }
    ]
  },
  "FlarmTerminal": {
    "COMPort": "",
    "BaudRate": "19200",
    "StopBits": "1",
    "DataBits": "8",
    "Parity": "None",
    "Handshake": "None",
    "AutoConnect": "False"
  }
}

